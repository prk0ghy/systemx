{
	"author": "Digitale Lernwelten GmbH",
	"dependencies": {
		"@paypal/checkout-server-sdk": "^1.0.3",
		"autoprefixer": "^10.4.0",
		"axios": "^0.24.0",
		"bcrypt": "^5.0.1",
		"cheerio": "^1.0.0-rc.10",
		"finalhandler": "^1.1.2",
		"gm": "^1.23.1",
		"graphql": "^16.1.0",
		"graphql-request": "^3.7.0",
		"js-beautify": "^1.14.0",
		"koa": "^2.13.4",
		"koa-body": "^4.2.0",
		"koa-mount": "^4.0.0",
		"koa-request": "^1.0.0",
		"koa-router": "^10.1.1",
		"koa-static": "^5.0.0",
		"minimist": "^1.2.5",
		"nodemailer": "^6.7.2",
		"nodemon": "^2.0.15",
		"open": "^8.4.0",
		"photoswipe": "^4.1.3",
		"pkg-dir": "^6.0.1",
		"postcss": "^8.4.4",
		"quill": "^1.3.7",
		"react-transition-group": "^4.4.2",
		"serve-static": "^1.14.1",
		"sqlite": "^4.0.23",
		"sqlite3": "^4.2.0"
	},
	"description": "Static site generator for CraftCMS, powered by GraphQL",
	"devDependencies": {
		"@babel/eslint-parser": "^7.16.3",
		"@babel/plugin-proposal-class-properties": "^7.16.0",
		"@babel/preset-env": "^7.16.4",
		"@babel/preset-react": "^7.16.0",
		"babel-jest": "^27.4.2",
		"eslint": "^8.4.1",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-hooks": "^4.3.0",
		"jest": "^27.4.3",
		"next": "^12.0.7",
		"npm-run-all": "^4.1.5",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"stylelint": "^14.1.0",
		"stylelint-config-standard": "^24.0.0",
		"stylelint-order": "^5.0.0"
	},
	"license": "EUPL-1.2",
	"main": "index.mjs",
	"name": "systemx",
	"nodemonConfig": {
		"ext": "css,html,jpg,js,json,mjs,png",
		"verbose": true
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:Digitale-Lernwelten/systemx.git"
	},
	"scripts": {
		"build": "node ./index.mjs --clean-build --",
		"build:release": "node ./index.mjs --download-media --clean-build --",
		"build:shop:frontend": "npm run build:shop:front-end",
		"build:shop:front-end": "npm --prefix modules/userLogin/front_end run build",
		"clean": "rm -rf dist web node_modules && npm --prefix modules/userLogin/front_end run clean",
		"dev:ssg": "nodemon --ignore dist/ --ignore web/ ./index.mjs --quiet -- --skip-network --start-server --",
		"dev:shop": "trap 'kill 0' INT; npm run dev:shop:front-end tagungsbaende & npm run dev:shop:back-end tagungsbaende & wait;",
		"dev:shop:back-end": "nodemon --ignore dist/ --ignore web/ ./index.mjs --quiet --skip-network --start-shop",
		"dev:shop:front-end": "npm --prefix modules/userLogin/front_end run dev",
		"lint": "npm run lint:js; npm run lint:css",
		"lint:js": "eslint './modules/**/*.mjs' './modules/**/*.js' --ignore-pattern 'modules/userLogin/front_end' --ignore-pattern 'modules/userLogin/back_end/OLD'; npm --prefix modules/userLogin/front_end run lint",
		"lint:css": "stylelint './modules/**/*.css'",
		"start": "node ./index.mjs --start-server --",
		"postinstall": "npm --prefix modules/userLogin/front_end install",
		"test": "npm run test:back-end",
		"test:back-end": "jest ./modules/contentPipeline/back_end/test -- lasub",
		"shop": "npm --prefix modules/userLogin/front_end run export && node ./index.mjs --start-shop --",
		"windev:shop:front-end": "npm --prefix modules/userLogin/front_end run windev",
		"windev:shop": "npm-run-all --parallel windev:shop:front-end dev:shop:back-end"
	},
	"type": "module",
	"version": "0.0.1"
}
