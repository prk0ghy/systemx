{
	"author": "Digitale Lernwelten GmbH",
	"dependencies": {
		"@paypal/checkout-server-sdk": "^1.0.2",
		"autoprefixer": "^10.3.1",
		"axios": "^0.21.4",
		"bcrypt": "^5.0.1",
		"cheerio": "^1.0.0-rc.10",
		"finalhandler": "^1.1.2",
		"gm": "^1.23.1",
		"graphql": "^15.5.1",
		"graphql-request": "^3.5.0",
		"js-beautify": "^1.14.0",
		"koa": "^2.13.1",
		"koa-body": "^4.2.0",
		"koa-mount": "^4.0.0",
		"koa-request": "^1.0.0",
		"koa-router": "^10.0.0",
		"koa-static": "^5.0.0",
		"minimist": "^1.2.5",
		"nodemailer": "^6.6.3",
		"nodemon": "^2.0.12",
		"open": "^8.2.1",
		"photoswipe": "^4.1.3",
		"pkg-dir": "^5.0.0",
		"postcss": "^8.3.6",
		"quill": "^1.3.7",
		"react-transition-group": "^4.4.2",
		"serve-static": "^1.14.1",
		"sqlite": "^4.0.23",
		"sqlite3": "^4.2.0"
	},
	"description": "Static site generator for CraftCMS, powered by GraphQL",
	"devDependencies": {
		"@babel/eslint-parser": "^7.15.0",
		"@babel/plugin-proposal-class-properties": "^7.14.5",
		"@babel/preset-env": "^7.15.0",
		"@babel/preset-react": "^7.14.5",
		"babel-jest": "^27.0.6",
		"eslint": "^7.32.0",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"jest": "^27.0.6",
		"next": "^11.1.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-order": "^4.1.0"
	},
	"license": "GPL-2.0-only",
	"main": "index.mjs",
	"name": "systemx",
	"nodemonConfig": {
		"ext": "css,html,jpg,js,json,mjs,png",
		"verbose": true
	},
	"repository": {
		"type": "git",
		"url": "git@bitbucket.org:idlgbr/systemx.git"
	},
	"scripts": {
		"build": "node ./index.mjs --clean-build --",
		"build:release": "node ./index.mjs --download-media --clean-build --",
		"build:shop:frontend": "npm --prefix modules/portal/front_end run build",
		"clean": "rm -rf dist web && npm --prefix modules/portal/front_end run clean",
		"dev:ssg": "nodemon --ignore dist/ --ignore web/ ./index.mjs --quiet --skip-network --start-server",
		"dev:shop": "trap 'kill 0' INT; npm run dev:shop:frontend & npm run dev:shop:backend & wait;",
		"dev:shop:backend": "nodemon --ignore dist/ --ignore web/ ./index.mjs --quiet --skip-network --start-shop",
		"dev:shop:frontend": "npm --prefix modules/portal/front_end run dev",
		"lint": "npm run lint:js; npm run lint:css",
		"lint:js": "eslint './modules/**/*.mjs' './modules/**/*.js' --ignore-pattern 'modules/portal/front_end' --ignore-pattern 'modules/portal/back_end/OLD'; npm --prefix modules/portal/front_end run lint",
		"lint:css": "stylelint './modules/**/*.css'",
		"start": "node ./index.mjs --start-server --",
		"postinstall": "npm --prefix modules/portal/front_end install",
		"test": "npm run test:back-end",
		"test:back-end": "jest ./modules/ssg/back_end/test -- lasub",
		"shop": "npm --prefix modules/portal/front_end run build && node ./index.mjs --start-shop"
	},
	"type": "module",
	"version": "0.0.1"
}
