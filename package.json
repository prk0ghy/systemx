{
	"author": "Digitale Lernwelten GmbH",
	"dependencies": {
		"autoprefixer": "^10.2.6",
		"cheerio": "^1.0.0-rc.10",
		"finalhandler": "^1.1.2",
		"graphql": "^15.5.0",
		"graphql-request": "^3.4.0",
		"js-beautify": "^1.13.13",
		"minimist": "^1.2.5",
		"nodemon": "^2.0.7",
		"open": "^8.2.0",
		"photoswipe": "^4.1.3",
		"pkg-dir": "^5.0.0",
		"postcss": "^8.3.0",
		"quill": "^1.3.7",
		"serve-static": "^1.14.1",

		"bcrypt": "^5.0.0",
		"ejs": "^3.1.5",
		"koa": "^2.13.0",
		"koa-body": "^4.2.0",
		"koa-mount": "^4.0.0",
		"koa-request": "^1.0.0",
		"koa-router": "^10.0.0",
		"koa-static": "^5.0.0",
		"nodemailer": "^6.4.17",
		"sqlite3": "^5.0.0"
	},
	"description": "Static site generator for CraftCMS, powered by GraphQL",
	"devDependencies": {
		"@babel/eslint-parser": "^7.14.4",
		"@babel/plugin-proposal-class-properties": "^7.13.0",
		"@babel/preset-env": "^7.14.4",
		"babel-jest": "^27.0.2",
		"eslint": "^7.28.0",
		"jest": "^27.0.4",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0"
	},
	"license": "GPL-2.0-only",
	"main": "back_end/index.mjs",
	"name": "systemx",
	"nodemonConfig": {
		"ext": "css,html,jpg,js,json,mjs,png",
		"verbose": true
	},
	"repository": {
		"type": "git",
		"url": "git@bitbucket.org:idlgbr/systemx.git"
	},
	"scripts": {
		"build": "node back_end/index.mjs",
		"build:clean": "rm -rf web && node back_end/index.mjs",
		"build:release": "rm -rf web && node back_end/index.mjs --download-media",
		"dev": "nodemon --ignore web/ back_end/index.mjs --quiet --start-server",
		"lint": "npm run eslint && npm run stylelint",
		"eslint": "eslint 'back_end/**/*.mjs' 'front_end/**/*.js'",
		"stylelint": "stylelint 'front_end/**/*.css'",
		"mon": "nodemon --ignore web/ back_end/index.mjs --skip-network --start-server",
		"mon:shop": "nodemon --ignore web/ shop/index.mjs",
		"start": "node back_end/index.mjs --start-server --",
		"open": "node back_end/index.mjs --open-browser --start-server",
		"test": "npm run test:back-end",
		"test:back-end": "jest back_end/test",
		"shop": "node shop/index.mjs"
	},
	"type": "module",
	"version": "0.0.1"
}
