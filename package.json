{
	"author": "Digitale Lernwelten GmbH",
	"dependencies": {
		"@paypal/checkout-server-sdk": "^1.0.2",
		"autoprefixer": "^10.2.6",
		"bcrypt": "^5.0.1",
		"cheerio": "^1.0.0-rc.10",
		"ejs": "^3.1.6",
		"finalhandler": "^1.1.2",
		"graphql": "^15.5.1",
		"graphql-request": "^3.4.0",
		"js-beautify": "^1.14.0",
		"koa": "^2.13.1",
		"koa-body": "^4.2.0",
		"koa-mount": "^4.0.0",
		"koa-request": "^1.0.0",
		"koa-router": "^10.0.0",
		"koa-static": "^5.0.0",
		"minimist": "^1.2.5",
		"nodemailer": "^6.6.2",
		"nodemon": "^2.0.9",
		"open": "^8.2.1",
		"photoswipe": "^4.1.3",
		"pkg-dir": "^5.0.0",
		"postcss": "^8.3.5",
		"quill": "^1.3.7",
		"serve-static": "^1.14.1",
		"sqlite": "^4.0.23",
		"sqlite3": "^5.0.2"
	},
	"description": "Static site generator for CraftCMS, powered by GraphQL",
	"devDependencies": {
		"@babel/eslint-parser": "^7.14.7",
		"@babel/plugin-proposal-class-properties": "^7.14.5",
		"@babel/preset-env": "^7.14.7",
		"babel-jest": "^27.0.6",
		"eslint": "^7.29.0",
		"jest": "^27.0.6",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0"
	},
	"license": "GPL-2.0-only",
	"main": "index.mjs",
	"name": "systemx",
	"nodemonConfig": {
		"ext": "css,html,jpg,js,json,mjs,png",
		"verbose": true
	},
	"repository": {
		"type": "git",
		"url": "git@bitbucket.org:idlgbr/systemx.git"
	},
	"scripts": {
		"build": "node ./index.mjs",
		"build:clean": "node ./index.mjs --clean-build",
		"build:release": "node ./index.mjs --download-media --clean-build",
		"clean": "rm -rf dist web",
		"dev": "npm run dev:shop",
		"dev:ssg": "nodemon --ignore dist/ --ignore web/ ./index.mjs --quiet --start-server",
		"dev:shop": "nodemon --ignore dist/ --ignore web/ ./index.mjs --quiet --start-shop",
		"lint": "npm run eslint && npm run stylelint",
		"eslint": "eslint './modules/**/*.mjs' './modules/**/*.js'",
		"stylelint": "stylelint './modules/**/*.css'",
		"mon": "npm run mon:ssg",
		"mon:ssg": "nodemon --ignore dist/ --ignore web/ ./index.mjs --skip-network --start-server",
		"mon:shop": "nodemon --ignore dist/ --ignore web/ ./index.mjs --skip-network --start-shop",
		"start": "node ./index.mjs --start-server --",
		"open": "node ./index.mjs --open-browser --start-server",
		"test": "npm run test:back-end",
		"test:back-end": "jest ./modules/ssg/back_end/test -- lasub",
		"shop": "node ./index.mjs --start-shop"
	},
	"type": "module",
	"version": "0.0.1"
}
