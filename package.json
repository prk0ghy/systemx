{
	"author": "Digitale Lernwelten GmbH",
	"dependencies": {
		"@paypal/checkout-server-sdk": "^1.0.3",
		"autoprefixer": "^10.4.2",
		"axios": "^0.24.0",
		"bcrypt": "^5.0.1",
		"cheerio": "^1.0.0-rc.10",
		"finalhandler": "^1.1.2",
		"gm": "^1.23.1",
		"graphql": "^16.1.0",
		"graphql-request": "^3.7.0",
		"html-to-text": "^8.1.0",
		"js-beautify": "^1.14.0",
		"koa": "^2.13.4",
		"koa-body": "^4.2.0",
		"koa-mount": "^4.0.0",
		"koa-request": "^1.0.0",
		"koa-router": "^10.1.1",
		"koa-static": "^5.0.0",
		"minimist": "^1.2.5",
		"nodemailer": "^6.7.2",
		"nodemon": "^2.0.15",
		"photoswipe": "^4.1.3",
		"pkg-dir": "^6.0.1",
		"postcss": "^8.4.4",
		"quill": "^1.3.7",
		"react-transition-group": "^4.4.2",
		"serve-static": "^1.14.1",
		"sqlite": "^4.0.23",
		"sqlite3": "^5.0.0"
	},
	"description": "Static site generator for CraftCMS, powered by GraphQL",
	"devDependencies": {
		"@babel/eslint-parser": "^7.16.3",
		"@babel/plugin-proposal-class-properties": "^7.16.7",
		"@babel/preset-env": "^7.16.8",
		"@babel/preset-react": "^7.16.7",
		"babel-jest": "^27.4.6",
		"eslint": "^8.7.0",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"husky": "^7.0.4",
		"jest": "^27.4.7",
		"next": "^12.0.8",
		"npm-run-all": "^4.1.5",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"stylelint": "^14.2.0",
		"stylelint-config-standard": "^24.0.0",
		"stylelint-css-modules": "^1.2.1",
		"stylelint-order": "^5.0.0"
	},
	"license": "EUPL-1.2",
	"main": "index.mjs",
	"name": "systemx",
	"nodemonConfig": {
		"ext": "css,html,jpg,js,json,mjs,png",
		"verbose": true
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:Digitale-Lernwelten/systemx.git"
	},
	"scripts": {
		"prepare": "husky install",
		"build": "node ./index.mjs --clean-build --",
		"build:release": "node ./index.mjs --download-media --clean-build --",
		"build:shop:front-end": "npm --prefix modules/userLogin/front_end run build",
		"clean": "rm -rf dist web node_modules; npm --prefix modules/userLogin/front_end run clean",
		"dev": "nodemon --ignore dist/ --ignore web/ ./index.mjs --quiet -- --skip-network --mode=\"development\" --SYSTEMX --",
		"dev:shop": "nodemon --ignore dist/ --ignore web/ --ignore ./modules/userLogin/front_end/out --ignore ./modules/userLogin/front_end/config.js ./scripts/dev_shop.mjs --",
		"prod:shop": "nodemon --ignore dist/ --ignore web/ --ignore ./modules/userLogin/front_end/out --ignore ./modules/userLogin/front_end/config.js ./scripts/prod_shop.mjs --",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
		"lint:js": "eslint './modules/**/*.mjs' './modules/**/*.js' --ignore-pattern 'modules/userLogin/front_end' && npm --prefix modules/userLogin/front_end run lint",
		"lint:js:fix": "eslint './modules/**/*.mjs' './modules/**/*.js' --ignore-pattern 'modules/userLogin/front_end' --fix && npm --prefix modules/userLogin/front_end run lint:fix",
		"lint:css": "stylelint './modules/**/*.css'",
		"lint:css:fix": "stylelint './modules/**/*.css' --fix",
		"start": "node ./index.mjs --",
		"postinstall": "npm --prefix modules/userLogin/front_end install",
		"test": "npm run test:back-end",
		"test:back-end": "NODE_OPTIONS=--experimental-vm-modules jest ./modules/contentPipeline/back_end/test -- lasub",
		"test:integration": "node ./index.mjs --clean-build --rethrow-errors --"
	},
	"type": "module",
	"version": "1.0.0"
}
